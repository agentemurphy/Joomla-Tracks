      <param name="shownumber" type="radio" default="1" label="COM_TRACKS_Display_individual_number" description="" >
        <option value="0">COM_TRACKS_No</option>
        <option value="1">COM_TRACKS_Yes</option>
      </param>
      <param name="showflag" type="radio" default="1" label="COM_TRACKS_Display_country_flag" description="" >
        <option value="0">COM_TRACKS_No</option>
        <option value="1">COM_TRACKS_Yes</option>
      </param>
      <param name="showteams" type="radio" default="1" label="COM_TRACKS_Display_teams_in_rankings" description="" >
			  <option value="0">COM_TRACKS_No</option>
			  <option value="1">COM_TRACKS_Yes</option>
			</param>
    </params>
	</state>
