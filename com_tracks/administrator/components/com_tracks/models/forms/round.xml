<?xml version="1.0" encoding="UTF-8"?>
<form>
		
		<field
			name="name"
			type="text"
			label="COM_TRACKS_Name"
			description="COM_TRACKS_Name_DESC"
			class="inputbox"
			required="true"/>
			
		<field
			name="alias"
			type="text"
			label="COM_TRACKS_alias"
			description="COM_TRACKS_alias_DESC"
			class="inputbox"/>
			
		<field
			name="short_name"
			type="text"
			label="COM_TRACKS_ROUND_SHORT_NAME"
			description="COM_TRACKS_ROUND_SHORT_NAME_DESC"
			class="inputbox"
			required="true"/>
			
		<field
			name="published"
			type="list"
			class="inputbox"
			default="1"
			size="1"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC">
			<option
				value="1">
				JPUBLISHED</option>
			<option
				value="0">
				JUNPUBLISHED</option>
		</field>
	
		<field
			name="description"
			type="editor"
			label="COM_TRACKS_Description"
			description="COM_TRACKS_Description" 
			filter="JComponentHelper::filterText" buttons="true"
			/>
		
</form>