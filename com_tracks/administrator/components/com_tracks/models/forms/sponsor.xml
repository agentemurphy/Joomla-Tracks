<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field
			name="id"
			type="hidden"
		/>
		<field
			name="name"
			type="text"
			label="COM_TRACKS_NAME"
			description="COM_TRACKS_NAME"
			size="40"
			class="inputbox"
			default=""
			required="true"
		/>
		<field
			name="alias"
			type="text"
			label="COM_TRACKS_ALIAS"
			description="COM_TRACKS_ALIAS"
			size="40"
			class="inputbox"
			default=""
		/>
		<field
			name="url"
			type="text"
			label="COM_TRACKS_SPONSOR_MANAGE_URL_LABEL"
			description="COM_TRACKS_SPONSOR_MANAGE_URL_DESC"
			size="80"
			class="inputbox"
			default=""
		/>
		<field
			name="cost"
			type="text"
			label="COM_TRACKS_SPONSOR_MANAGE_COST_LABEL"
			description="COM_TRACKS_SPONSOR_MANAGE_COST_DESC"
			size="40"
			class="inputbox"
			default=""
		/>
		<field
			name="logo"
			type="media"
			label="COM_TRACKS_SPONSOR_MANAGE_LOGO_LABEL"
			description="COM_TRACKS_SPONSOR_MANAGE_LOGO_DESC"
			directory="tracks/sponsors"
		/>
	<field
		name="published"
		type="list"
		class="inputbox"
		default="1"
		size="1"
		label="JSTATUS"
		description="JFIELD_PUBLISHED_DESC">
		<option
			value="1">
			JPUBLISHED</option>
		<option
			value="0">
			JUNPUBLISHED</option>
	</field>
		
	<field
		name="description"
		type="editor"
		label="COM_TRACKS_SPONSOR_MANAGE_DESCRIPTION_LABEL"
		description="COM_TRACKS_SPONSOR_MANAGE_DESCRIPTION_DESC"
		class="inputbox"
		filter="safehtml"
		buttons="true"
		hide="readmore,pagebreak"/>
	</fieldset>
</form>
