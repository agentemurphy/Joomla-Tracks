<install type="module" version="1.5.0" method="upgrade">
	<name>Tracks ranking</name>
 	<author>Julien Vonthron</author>
 	<authorEmail>julien.vonthron@gmail.com</authorEmail>
   <authorUrl>http://www.jlv-solutions.com</authorUrl>	
 	<creationDate>VERSION_CREATION_DATE</creationDate>
 	<copyright>(C) 2008,2009,2010 Julien Vonthron. All rights reserved.</copyright>
 	<license>http://www.gnu.org/licenses/gpl.html</license>
 	<version>VERSION_NUMBER</version>
	<description>MOD_TRACKS_RANKING_DESC</description>
	<files>
		<filename module="mod_tracks_ranking">mod_tracks_ranking.php</filename>
		<filename>mod_tracks_ranking.css</filename>
    <filename>index.html</filename>
    <filename>helper.php</filename>
    <filename>tmpl/default.php</filename>
    <filename>tmpl/index.html</filename>  
	</files>
	    
  <languages>
    <language tag="en-GB">languages/en-GB.mod_tracks_ranking.ini</language>
  </languages>
        
	<params addpath="/administrator/components/com_tracks/elements">
    <param name="moduleclass_sfx" type="text" default="" label="Module_Class_Suffix" description="PARAMMODULECLASSSUFFIX" />
    <param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="count" type="text" default="5" label="MOD_TRACKS_RANKING_Count" description="MOD_TRACKS_RANKING_The_number_of_rows_to_display" />
		<param name="project_id" type="tsql" default="" label="MOD_TRACKS_RANKING_Select_a_project" description="MOD_TRACKS_RANKING_Select_a_project" query="SELECT id AS project_id, name AS text FROM #__tracks_projects ORDER BY name ASC" />
		<param name="showteams" type="radio" default="1" label="MOD_TRACKS_RANKING_Show_teams" description="">
      <option value="0">No</option>
      <option value="1">Yes</option>
    </param>
  </params>
  
  <params group="advanced">
		<param name="cache" type="list" default="1" label="Caching" description="Select_whether_to_cache_the_content_of_this_module">
			<option value="1">Use global</option>
			<option value="0">No caching</option>
		</param>
		<param name="cache_time" type="text" default="900" label="Cache_Time" description="The_time_before_the_module_is_recached" />
	</params>
	
</install>
