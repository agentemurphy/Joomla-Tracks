<?xml version="1.0" encoding="UTF-8"?>
<form
	lessfiles="media://com_tracks/css/tracksbackend.less||media://com_tracks/css/tracksbackend.css"
	type="browse"
	show_header="1"
	show_filters="1"
	show_pagination="1"
	norows_placeholder="COM_TRACKS_COMMON_NORECORDS"
	>

	<headerset>
		<header name="id" type="rowselect" tdwidth="20" />
		<header name="name" type="fieldsearchable" sortable="true"
		        buttons="yes" buttonclass="btn"
			/>
		<header name="competition_name" type="fieldsearchable" label="COM_TRACKS_competition" sortable="true"
				buttons="yes" buttonclass="btn"
				/>
		<header name="season_name" type="fieldsearchable" label="COM_TRACKS_SEASON" sortable="true"
				buttons="yes" buttonclass="btn"
				/>
		<header name="published" type="published" sortable="true"
		        show_archived="false" show_trash="false"
			/>
		<header name="ordering" type="ordering" sortable="true" />
	</headerset>

	<fieldset name="items">
		<field name="id" type="selectrow"/>

		<field name="name" type="tracksprojecttitle"
		       show_link="true"
		       url="index.php?option=com_tracks&amp;view=project&amp;id=[ITEM:ID]"
			   select_url="index.php?option=com_tracks&amp;view=project&amp;task=select&amp;id=[ITEM:ID]"
		       class="tracksitem"
		       empty_replacement="(no name)"
			   slug_field="alias"
			/>

		<field name="competition_name" type="text"/>

		<field name="season_name" type="text"/>

		<field name="published" type="published"/>

		<field name="ordering" type="ordering" />
	</fieldset>
</form>
