<?xml version="1.0" encoding="UTF-8"?>
<form
	lessfiles="media://com_tracks/css/tracksbackend.less||media://com_tracks/css/tracksbackend.css"
	type="browse"
	show_header="1"
	show_filters="1"
	show_pagination="1"
	norows_placeholder="COM_TRACKS_COMMON_NORECORDS"
	>

	<headerset>
		<header name="id" type="rowselect" tdwidth="20" />
		<header name="last_name" type="fieldsearchable"
			label="COM_TRACKS_LAST_NAME"
			sortable="true"
			buttons="yes" buttonclass="btn"
			/>

		<header name="first_name" type="fieldsearchable"
			label="COM_TRACKS_FIRST_NAME"
			sortable="true"
			buttons="yes" buttonclass="btn"
			/>
		<header name="alias" label="COM_TRACKS_ALIAS" type="fieldsearchable" sortable="true"
		        buttons="yes" buttonclass="btn"
			/>
		<header name="user_id" label="COM_TRACKS_USER" type="fieldsearchable" sortable="true"
			/>
	</headerset>

	<fieldset name="items">
		<field name="id" type="selectrow"/>

		<field name="last_name" type="text"
		       show_link="true"
		       url="index.php?option=com_tracks&amp;view=individual&amp;id=[ITEM:ID]"
		       class="tracksitem"
		       empty_replacement="(no name)"
			/>

		<field name="first_name" type="text" />

		<field name="alias" type="text" />

		<field name="user_id"
			type="user" sortable="true" tdwidth="10%"
			show_avatar="false"
			show_username="true"
			show_email="false"
			show_name="false"
			show_id="false"
			/>
	</fieldset>
</form>
