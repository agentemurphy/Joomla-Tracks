<?xml version="1.0" encoding="UTF-8"?>
<form
	lessfiles="media://com_tracks/css/tracksbackend.less||media://com_tracks/css/tracksbackend.css"
	validate="true"
	>
	<fieldset name="basic_configuration"
			  label="COM_TRACKS_SUBROUNDRESULT_GROUP_BASIC"
			  description="COM_TRACKS_SUBROUNDRESULT_GROUP_BASIC_DESC"
			  class="span6"
			>
		<field
			name="id"
			type="text"
			default="0"
			label="JGLOBAL_FIELD_ID_LABEL"
			description ="JGLOBAL_FIELD_ID_DESC"
			class="readonly"
			readonly="true"/>

		<field
			name="individual_id"
			type="model"
			model="TracksModelProjectindividuals"
			key_field="individual_id"
			value_field="name"
			label="COM_TRACKS_PARTICIPANT"
			description="COM_TRACKS_PARTICIPANT"
			class="inputbox"
			required="true"/>

		<field
			name="rank"
			type="text"
			label="COM_TRACKS_Rank"
			description="COM_TRACKS_Rank_desc"
			class="inputbox"/>

		<field
			name="bonus_points"
			type="text"
			label="COM_TRACKS_Bonus_points"
			description="COM_TRACKS_Bonus_points"
			class="inputbox"/>

		<field
			name="performance"
			type="textarea"
			label="COM_TRACKS_Performance"
			description="COM_TRACKS_Performance"
			class="inputbox"/>

		<field
			name="comment"
			type="editor"
			label="COM_TRACKS_SUBROUND_COMMENT"
			description="COM_TRACKS_SUBROUND_COMMENT_DESC"
			filter="JComponentHelper::filterText" buttons="true"
			/>

		<field
			name="checked_out"
			type="hidden"
			filter="unset"/>

		<field
			name="checked_out_time"
			type="hidden"
			filter="unset"/>

	</fieldset>
</form>
