<?xml version="1.0" encoding="UTF-8"?>
<form
	lessfiles="media://com_tracks/css/tracksbackend.less||media://com_tracks/css/tracksbackend.css"
	type="browse"
	show_header="1"
	show_filters="1"
	show_pagination="1"
	norows_placeholder="COM_TRACKS_COMMON_NORECORDS"
	>

	<headerset>
		<header name="id" type="rowselect" tdwidth="20" />
		<header name="name" type="fieldsearchable" sortable="true"
		        buttons="yes" buttonclass="btn"
			/>
		<header name="alias" label="COM_TRACKS_ALIAS" type="fieldsearchable" sortable="true"
		        buttons="yes" buttonclass="btn"
			/>
		<header name="published" type="published" sortable="true"
		        show_archived="false" show_trash="false"
			/>
		<header name="ordering" type="ordering" sortable="true" />
	</headerset>

	<fieldset name="items">
		<field name="id" type="selectrow"/>

		<field name="name" type="text"
		       show_link="true"
		       url="index.php?option=com_tracks&amp;view=round&amp;id=[ITEM:ID]"
		       class="tracksitem"
		       empty_replacement="(no name)"
			/>

		<field name="alias" type="text" />

		<field name="published" type="published"/>

		<field name="ordering" type="ordering" />
	</fieldset>
</form>
