<?xml version="1.0" encoding="UTF-8"?>
<form
	lessfiles="media://com_tracks/css/tracksbackend.less||media://com_tracks/css/tracksbackend.css"
	type="browse"
	show_header="1"
	show_filters="1"
	show_pagination="1"
	norows_placeholder="COM_TRACKS_COMMON_NORECORDS"
	>

	<headerset>
		<header name="id" type="rowselect" tdwidth="20" />
		<header name="name" type="fieldsearchable" sortable="true"
		        buttons="yes" buttonclass="btn"
			/>
		<header name="note" label="COM_TRACKS_NOTE" type="field"/>
		<header name="count_points" type="fieldselectable" label="COM_TRACKS_count_in_rankings" sortable="true" />
		<header name="points_attribution" label="COM_TRACKS_POINTS" type="field"/>
	</headerset>

	<fieldset name="items">
		<field name="id" type="selectrow"/>

		<field name="name" type="title"
		       show_link="true"
		       url="index.php?option=com_tracks&amp;view=subroundtype&amp;id=[ITEM:ID]"
		       class="tracksitem"
		       empty_replacement="(no name)"
			   slug_field="alias"
			/>

		<field name="note" type="text" />

		<field name="count_points" type="boolean"/>

		<field name="points_attribution" type="text" size="10"/>
	</fieldset>
</form>
