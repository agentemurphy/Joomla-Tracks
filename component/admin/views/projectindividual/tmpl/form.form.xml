<?xml version="1.0" encoding="UTF-8"?>
<form
	lessfiles="media://com_tracks/css/tracksbackend.less||media://com_tracks/css/tracksbackend.css"
	validate="true"
	>
	<fieldset name="basic_configuration"
			  label="COM_TRACKS_PROJECTROUND_GROUP_BASIC"
			  description="COM_TRACKS_PROJECTROUND_GROUP_BASIC_DESC"
			  class="span6"
			>
		<field
			name="id"
			type="text"
			default="0"
			label="JGLOBAL_FIELD_ID_LABEL"
			description ="JGLOBAL_FIELD_ID_DESC"
			class="readonly"
			readonly="true"/>

		<field
			name="individual_id"
			type="tindividual"
			label="COM_TRACKS_Person"
			description="COM_TRACKS_Person"
			class="inputbox"
			required="required"
			/>

		<field
			name="number"
			type="text"
			id="number"
			size="4"
			maxlength="4"
			class="inputbox"
			/>

		<field
			name="team_id"
			type="model"
			model="TracksModelTeams"
			key_field="id"
			value_field="name"
			label="COM_TRACKS_TEAM"
			description="COM_TRACKS_TEAM"
			class="inputbox"
			required="false">
			<option value="0">COM_TRACKS_NO_TEAM</option>
		</field>

		<field
			name="checked_out"
			type="hidden"
			filter="unset"/>

		<field
			name="checked_out_time"
			type="hidden"
			filter="unset"/>

	</fieldset>
</form>
