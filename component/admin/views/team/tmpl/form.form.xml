<?xml version="1.0" encoding="UTF-8"?>
<form
	lessfiles="media://com_tracks/css/tracksbackend.less||media://com_tracks/css/tracksbackend.css"
	validate="true"
	>
	<fieldset name="basic_configuration"
			  label="COM_TRACKS_TEAMS_GROUP_BASIC"
			  description="COM_TRACKS_TEAMS_GROUP_BASIC_DESC"
			  class="span6"
			>
		<field
			name="id"
			type="text"
			default="0"
			label="JGLOBAL_FIELD_ID_LABEL"
			description ="JGLOBAL_FIELD_ID_DESC"
			class="readonly"
			readonly="true"/>

		<field
			name="name"
			type="text"
			label="COM_TRACKS_NAME"
			description="COM_TRACKS_NAME_DESC"
			class="inputbox"
			required="true"/>

		<field
			name="alias"
			type="text"
			label="COM_TRACKS_alias"
			description="COM_TRACKS_alias_DESC"
			class="inputbox"/>

		<field
			name="short_name"
			type="text"
			label="COM_TRACKS_TEAM_SHORT_NAME"
			description="COM_TRACKS_TEAM_SHORT_NAME_DESC"
			class="inputbox"
			size="20"
			maxlength="20"
			required="false"/>

		<field
			name="acronym"
			type="text"
			label="COM_TRACKS_TEAM_ACRONYM"
			description="COM_TRACKS_TEAM_ACRONYM_DESC"
			class="inputbox"
			size="6"
			maxlength="6"
			required="false"/>

		<field
			name="checked_out"
			type="hidden"
			filter="unset"/>

		<field
			name="checked_out_time"
			type="hidden"
			filter="unset"/>

		<field
			name="published"
			type="list"
			class="inputbox"
			default="1"
			size="1"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC">
			<option
					value="1">
				JPUBLISHED</option>
			<option
					value="0">
				JUNPUBLISHED</option>
			<option
					value="2">
				JARCHIVED</option>
			<option
					value="-2">
				JTRASHED</option>
		</field>

		<field
			name="picture"
			type="media"
			label="COM_TRACKS_TEAM_PICTURE"
			description="COM_TRACKS_TEAM_PICTURE_DESC"
			class="inputbox"
			preview="show"
			directory="images/com_tracks/individuals/"/>

		<field
			name="picture_small"
			type="media"
			label="COM_TRACKS_TEAM_SMALL_PICTURE"
			description="COM_TRACKS_TEAM_SMALL_PICTURE_DESC"
			class="inputbox"
			preview="show"
			directory="images/com_tracks/individuals/"/>

		<field
			name="country_code"
			type="model"
			label="COM_TRACKS_COUNTRY"
			description="COM_TRACKS_COUNTRY"
			model="TracksModelCountries"
			key_field="value"
			value_field="text"
			>
			<option value=""></option>
		</field>

		<field
			name="admin_id"
			type="user"
			class="inputbox"
			default="0"
			label="COM_TRACKS_TEAM_ADMIN"
			description="COM_TRACKS_TEAM_ADMIN_DESC"
			/>
	</fieldset>

	<fieldset name="description_group"
			  label="COM_TODO_ITEMS_GROUP_DESCRIPTION"
			  description="COM_TODO_ITEMS_GROUP_DESCRIPTION_DESC"
			  class="span6"
			>

		<field
			name="description"
			type="editor"
			label="COM_TRACKS_Description"
			description="COM_TRACKS_Description"
			filter="JComponentHelper::filterText" buttons="true"
			/>
	</fieldset>
</form>
