<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fieldset name="basic_configuration"
			  label="COM_TRACKS_SUBROUNDRESULT_GROUP_BASIC"
			  description="COM_TRACKS_SUBROUNDRESULT_GROUP_BASIC_DESC"
			>
		<field
			name="id"
			type="hidden"
			default="0"/>

		<field
			name="event_id"
			type="hidden"
			default="0"/>

		<field
			name="individual_id"
			type="tracksparticipant"
			label="COM_TRACKS_PARTICIPANT"
			description="COM_TRACKS_PARTICIPANT"
			class="inputbox"
			required="true"/>

		<field
			name="rank"
			type="text"
			label="COM_TRACKS_Rank"
			description="COM_TRACKS_Rank_desc"
			class="inputbox"/>

		<field
			name="bonus_points"
			type="text"
			label="COM_TRACKS_Bonus_points"
			description="COM_TRACKS_Bonus_points"
			class="inputbox"/>

		<field
			name="performance"
			type="textarea"
			label="COM_TRACKS_Performance"
			description="COM_TRACKS_Performance"
			class="inputbox"/>

		<field
			name="comment"
			type="editor"
			label="COM_TRACKS_SUBROUND_COMMENT"
			description="COM_TRACKS_SUBROUND_COMMENT_DESC"
			filter="JComponentHelper::filterText" buttons="true"
			/>

	</fieldset>
</form>
